# Reposit Self-Hosting Environment Variables
# Copy this file to .env and fill in the values

# Database connection (if using the bundled PostgreSQL, use this format)
DATABASE_URL=ecto://reposit:your_db_password@db/reposit

# PostgreSQL settings (for bundled database)
POSTGRES_USER=reposit
POSTGRES_PASSWORD=your_db_password
POSTGRES_DB=reposit

# Phoenix secret key (generate with: openssl rand -base64 64 | tr -d '\n')
SECRET_KEY_BASE=

# OpenAI API key (required for embeddings)
OPENAI_API_KEY=

# Resend API key (required for emails)
RESEND_API_KEY=

# Your domain (used for URLs and cookies)
PHX_HOST=localhost
