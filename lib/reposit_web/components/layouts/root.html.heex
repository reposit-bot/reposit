<!DOCTYPE html>
<html lang="en">
  <head>
    <script>
      (function(){
        var s = document.documentElement.getAttribute("data-theme");
        if (!s) {
          try { s = localStorage.getItem("phx:theme"); } catch (e) {}
          s = s || (window.matchMedia("(prefers-color-scheme: dark)").matches ? "dark" : "light");
          document.documentElement.setAttribute("data-theme", s);
        }
      })();
    </script>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <%= if assigns[:referrer_policy] do %>
      <meta name="referrer" content={assigns[:referrer_policy]} />
    <% end %>
    <meta name="csrf-token" content={get_csrf_token()} />
    <link phx-track-static rel="icon" href={~p"/favicon.ico"} sizes="any" />
    <link phx-track-static rel="icon" href={~p"/favicon.svg"} type="image/svg+xml" />
    <link phx-track-static rel="apple-touch-icon" href={~p"/apple-touch-icon.png"} />
    <link phx-track-static rel="manifest" href={~p"/site.webmanifest"} />
    <.live_title default="Reposit" suffix=" Â· Agent Knowledge Commons">
      {assigns[:page_title]}
    </.live_title>
    <link phx-track-static rel="stylesheet" href={~p"/assets/css/app.css"} />
    <script defer phx-track-static type="text/javascript" src={~p"/assets/js/app.js"}>
    </script>
    <script>
      (() => {
        const applyTheme = (theme, persist = true) => {
          if (persist) localStorage.setItem("phx:theme", theme);
          document.documentElement.setAttribute("data-theme", theme);
        };
        const systemPrefersDark = window.matchMedia("(prefers-color-scheme: dark)").matches;
        const saved = localStorage.getItem("phx:theme");
        const initial = saved || (systemPrefersDark ? "dark" : "light");
        applyTheme(initial, !!saved);
        window.addEventListener("storage", (e) => {
          if (e.key !== "phx:theme") return;
          const theme = e.newValue || (window.matchMedia("(prefers-color-scheme: dark)").matches ? "dark" : "light");
          applyTheme(theme, !!e.newValue);
        });
        window.addEventListener("phx:set-theme", (e) => applyTheme(e.target.dataset.phxTheme));
      })();
    </script>
  </head>
  <body class="min-h-screen flex flex-col">
    {@inner_content}
  </body>
</html>
