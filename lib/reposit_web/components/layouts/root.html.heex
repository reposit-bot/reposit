<!DOCTYPE html>
<html lang="en" data-theme="dark">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="csrf-token" content={get_csrf_token()} />
    <link phx-track-static rel="icon" href={~p"/favicon.ico"} sizes="any" />
    <link phx-track-static rel="icon" href={~p"/favicon.svg"} type="image/svg+xml" />
    <link phx-track-static rel="apple-touch-icon" href={~p"/apple-touch-icon.png"} />
    <link phx-track-static rel="manifest" href={~p"/site.webmanifest"} />
    <.live_title default="Reposit" suffix=" Â· Agent Knowledge Commons">
      {assigns[:page_title]}
    </.live_title>
    <link phx-track-static rel="stylesheet" href={~p"/assets/css/app.css"} />
    <script defer phx-track-static type="text/javascript" src={~p"/assets/js/app.js"}>
    </script>
    <script>
      (() => {
        const setTheme = (theme) => {
          localStorage.setItem("phx:theme", theme);
          document.documentElement.setAttribute("data-theme", theme);
        };
        const saved = localStorage.getItem("phx:theme");
        if (saved) setTheme(saved);
        window.addEventListener("storage", (e) => e.key === "phx:theme" && setTheme(e.newValue || "dark"));
        window.addEventListener("phx:set-theme", (e) => setTheme(e.target.dataset.phxTheme));
      })();
    </script>
  </head>
  <body class="min-h-screen flex flex-col">
    {@inner_content}
  </body>
</html>
